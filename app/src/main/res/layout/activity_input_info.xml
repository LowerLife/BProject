<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".input.InputInfoActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/anton"
        android:text="B"
        android:textColor="#1a191d"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/info_input_underline"
        android:layout_width="46dp"
        android:layout_height="4dp"
        android:layout_marginStart="32dp"
        android:background="#1a191d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <TextView
        android:id="@+id/info_input_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="98dp"
        android:lineHeight="26sp"
        android:text="안녕하세요"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_input_underline"/>

    <TextView
        android:id="@+id/info_input_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:lineHeight="26sp"
        android:text="얼마안되는 너의"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_input_text1"/>

    <View
        android:id="@+id/info_input_delete_line"
        android:layout_width="120dp"
        android:layout_height="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:background="#e6003e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_input_text1"/>

    <EditText
        android:id="@+id/info_input_monthly_salary"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:ems="10"
        android:inputType="number"
        android:lineHeight="26sp"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/info_input_text2"
        app:layout_constraintTop_toBottomOf="@+id/info_input_text1"
        tools:text="월급 실수령액"
        tools:textColor="#888888"/>

    <View
        android:id="@+id/info_input_underline2"
        android:layout_width="135dp"
        android:layout_height="4dp"
        android:layout_marginStart="156dp"
        android:background="#1a191d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_input_monthly_salary"/>

    <TextView
        android:id="@+id/info_input_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="10dp"
        android:lineHeight="26sp"
        android:text="과"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/info_input_monthly_salary"
        app:layout_constraintTop_toBottomOf="@+id/info_input_text1"/>

    <TextView
        android:id="@+id/info_input_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:lineHeight="26sp"
        android:text="회사"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_input_text2"/>

    <EditText
        android:id="@+id/info_input_enter_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:ems="10"
        android:inputType="number|date"
        android:lineHeight="26sp"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/info_input_text4"
        app:layout_constraintTop_toBottomOf="@+id/info_input_text2"
        tools:text="입사일"
        tools:textColor="#888888"/>

    <View
        android:id="@+id/info_input_underline3"
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:layout_marginStart="72dp"
        android:background="#1a191d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_input_enter_date"/>

    <TextView
        android:id="@+id/info_input_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:lineHeight="26sp"
        android:text="그리고"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_input_text4"/>

    <EditText
        android:id="@+id/info_input_salary_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:ems="10"
        android:inputType="number"
        android:lineHeight="26sp"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/info_input_text5"
        app:layout_constraintTop_toBottomOf="@+id/info_input_text4"
        tools:text="급여일"
        tools:textColor="#888888"/>

    <View
        android:id="@+id/info_input_underline4"
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:layout_marginStart="88dp"
        android:background="#1a191d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_input_salary_date"/>

    <TextView
        android:id="@+id/info_input_text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:lineHeight="26sp"
        android:text="을 알려주세요 :)"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/info_input_salary_date"
        app:layout_constraintTop_toBottomOf="@+id/info_input_text4"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="214dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_info2"
        app:layout_constraintBottom_toTopOf="@+id/input_info_bottom_bg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_input_text5"/>

    <View
        android:id="@+id/input_info_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#1a191d"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/input_info_bottom_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/input_info_bottom_bg"
        app:layout_constraintRight_toRightOf="@id/input_info_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/input_info_bottom_bg"
        tools:text="NEXT"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="98dp"
        app:layout_constraintStart_toEndOf="@+id/info_input_text1"
        app:layout_constraintTop_toBottomOf="@+id/info_input_underline"
        app:srcCompat="@drawable/hello"/>

</android.support.constraint.ConstraintLayout>